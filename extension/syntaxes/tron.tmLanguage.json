{
  "name": "tron",
  "scopeName": "source.tron",
  "fileTypes": ["tron"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#functions"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.tron",
          "match": "//.*$"
        },
        {
          "name": "comment.block.tron",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.tron",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.tron",
          "match": "\\\\."
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tron",
          "match": "\\b(if|else|else if|while|for|return|break|print|let|include|input)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.tron",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*(?=\\()"
        }
      ]
    }
  }
}
